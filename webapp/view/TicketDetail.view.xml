<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.sap.build.standard.ticketManagement.controller.TicketDetail" xmlns="sap.m"
	xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Page showHeader="true" title="Dettaglio ticket" showFooter="true" showNavButton="true" navButtonPress="_onPageNavButtonPress">
		<content>
			<IconTabBar expandable="true" expanded="true" applyContentPadding="true" backgroundDesign="Transparent" upperCase="true" visible="true"
				selectedKey="Ok">
				<items>
					<IconTabFilter icon="sap-icon://message-popup" iconColor="Positive" text="Chat" count="" design="Vertical" showAll="false"
						textDirection="Inherit" enabled="true" visible="true" iconDensityAware="false">
						<content>
							<ScrollContainer horizontal="true" vertical="true" width="auto" height="auto" visible="true">
								<content>
									<Carousel height="auto" width="auto" loop="true" showPageIndicator="true" pageIndicatorPlacement="Bottom" visible="true"
										class="sapUiContentPadding" pages="{/TicketCollection}">
										<pages>
											<Image src="{Screenshot}" height="auto" width="auto" densityAware="false"/>
										</pages>
									</Carousel>
									<FeedInput showIcon="true" icon="" value="" placeholder="Post something here" enabled="true" visible="true" maxLength="0"
										buttonTooltip="Submit" post="onPost"/>
									<List items="{/ChatCollection}" width="auto" growing="true" growingThreshold="20" growingScrollToLoad="false" backgroundDesign="Solid">
										<items>
											<FeedListItem icon="{AuthorPicUrl}" sender="{Author}"
												text="{Text}" info="{Type}" timestamp="{Date}"
												senderPress="onSenderPress" iconPress="onIconPress"/>
										</items>
									</List>
								</content>
							</ScrollContainer>
						</content>
					</IconTabFilter>
					<IconTabSeparator icon="" iconDensityAware="false"/>
					<IconTabFilter icon="sap-icon://detail-view" iconColor="Default" text="Dettaglio" count="" design="Vertical" showAll="false"
						textDirection="Inherit" enabled="true" visible="true" iconDensityAware="false">
						<content>
							<ScrollContainer horizontal="true" vertical="true" width="auto" height="auto" visible="true">
								<content>
									<Carousel height="auto" width="auto" loop="true" showPageIndicator="true" pageIndicatorPlacement="Bottom" visible="true"
										class="sapUiContentPadding" pages="{/TicketCollection}">
										<pages>
											<Image src="{Screenshot}" height="auto" width="auto" densityAware="false"/>
										</pages>
									</Carousel>
									<Panel expandable="true" expanded="false" headerText="Dettaglio ticket" width="auto" class="sapUiResponsiveMargin">
										<List items="{/TicketCollection}" width="auto" growing="true" growingThreshold="20" growingScrollToLoad="false" backgroundDesign="Solid" >
											<items>
												<StandardListItem title="Numero:" info="{ID}"/>
												<StandardListItem icon="sap-icon://activity-2" title="Titolo:" info="{Titolo}"/>
												<StandardListItem title="Categoria:" info="{Categoria}"/>
												<StandardListItem title="Descrizione:" info="{Descrizione}"/>
												<StandardListItem title="PrioritÃ :" info="{Priorita}"/>
												<StandardListItem title="Owner:" info="{Owner}"/>
												<StandardListItem title="Stato:" info="{Stato}"/>
												<StandardListItem title="Assigned to:" info="{Assigned_to}"/>
											</items>	
										</List>
									</Panel>
								</content>
							</ScrollContainer>
						</content>
					</IconTabFilter>
				</items>
				<content/>
			</IconTabBar>
		</content>
		<footer>
			<Bar design="Auto">
				<contentLeft/>
				<contentMiddle/>
				<contentRight>
					<Button text="Prosegui" type="Accept" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"
						press="_onButtonPress3"/>
				</contentRight>
			</Bar>
		</footer>
		<headerContent/>
		<subHeader/>
		<customHeader/>
	</Page>
</mvc:View>